<%= simple_form_for(@bookmark) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, input_html: {style: "width:250px;"} %>
    <%= f.input :host, input_html: {style: "width:250px;"} %>
    <%= f.input :url, input_html: {style: "width:250px;"} %>
    <%= f.input :category_id, as: :select, collection: @categories.map{|x| [x.name,x.id]},:prompt =>"Select Category", input_html: {style: "width:250px;"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Cancel', bookmarks_path, class: "btn btn-danger btn-min" %>
  </div>
<% end %>
